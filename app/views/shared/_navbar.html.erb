<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "home" do %>
    <%= image_tag "logo.png", class: "logo" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="info">

        <div class="nav-item active">
          <%= link_to "Contact", "#", class: "nav-link" %>
        </div>

        <div class="nav-item">
          <%= link_to "À Propos", "#", class: "nav-link" %>
        </div>

        <div class="nav-item dropdown">
          <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Se connecter", new_user_session_path, class: "dropdown-item" %>

            <% if user_signed_in? %>
              <%= link_to "Profil", "#", class: "dropdown-item" %>
              <%= link_to "Mes commandes", "#", class: "dropdown-item" %>
              <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% end %>
          </div>
        </div>

  </div>
</div>
